<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="788.0" prefWidth="1326.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Top Section: Navigation Bar -->
        <HBox prefHeight="104.0" prefWidth="1326.0" style="-fx-background-color: #ccebff; -fx-border-color: #33adff;">
            <children>
                <VBox prefHeight="102.0" prefWidth="231.0">
                    <children>
                        <Pane prefHeight="102.0" prefWidth="237.0">
                            <children>
                                <ImageView fx:id="aimsImage" fitHeight="94.0" fitWidth="115.0" layoutX="129.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                                    <image>
                                        <Image url="@../../../assets/images/Logo.png" />
                                    </image>
                                </ImageView>
                                <Label layoutX="135.0" layoutY="68.0" prefHeight="41.0" prefWidth="100.0" text="AIMS" textAlignment="CENTER" textFill="#5091e6">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="sign_out" layoutX="35.0" layoutY="39.0" text="Sign out">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </Pane>
                    </children>
                </VBox>
                <HBox prefHeight="102.0" prefWidth="882.0">
                    <children>
                        <Pane prefHeight="102.0" prefWidth="562.0">
                            <children>
                                <TextField fx:id="searchText" layoutX="17.0" layoutY="27.0" prefHeight="48.0" prefWidth="528.0">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </TextField>
                            </children>
                        </Pane>
                        <Pane prefHeight="102.0" prefWidth="158.0">
                            <children>
                                <SplitMenuButton fx:id="splitMenuBtnSearch" layoutY="27.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="124.0" text="Search">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </SplitMenuButton>
                            </children>
                        </Pane>
                        <Pane prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <SplitMenuButton fx:id="sort" layoutY="30.0" mnemonicParsing="false" text="Sort">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </SplitMenuButton>
                            </children>
                        </Pane>
                    </children>
                </HBox>
                <VBox prefHeight="102.0" prefWidth="208.0">
                    <children>
                        <Pane prefHeight="102.0" prefWidth="180.0">
                            <children>
                                <ImageView fx:id="orderIcon" fitHeight="75.0" fitWidth="64.0" layoutX="130.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                                    <image>
                                        <Image url="@../../../assets/images/orderIcon.png" />
                                    </image>
                                </ImageView>
                                <ImageView fx:id="cartImage" fitHeight="75.0" fitWidth="64.0" layoutX="14.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                                    <image>
                                        <Image url="@../../../assets/images/cart.png" />
                                    </image>
                                </ImageView>
                                <Label fx:id="numMediaInCart" layoutX="24.0" layoutY="11.0" prefHeight="16.0" prefWidth="64.0" text="0 media" textFill="#5091e6" />
                            </children>
                        </Pane>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Center Section: User Management Table -->
        <VBox layoutX="24.0" layoutY="123.0" spacing="10" prefWidth="1283.0">
            <TableView fx:id="userTable" prefHeight="300.0" prefWidth="1283.0">
                <columns>
                    <TableColumn fx:id="usernameColumn" text="Username"/>
                    <TableColumn fx:id="emailColumn" text="Email"/>
                    <TableColumn fx:id="addressColumn" text="Address"/>
                    <TableColumn fx:id="phoneColumn" text="Phone"/>
                    <TableColumn fx:id="typeColumn" text="User Type"/>
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button fx:id="createUserButton" text="Create New User" />
                <Button fx:id="viewUserInfoButton" text="View User Info" />
                <Button fx:id="updateUserInfoButton" text="Update User Info" />
                <Button fx:id="deleteUserButton" text="Delete User" />
                <Button fx:id="resetPasswordButton" text="Reset Password" />
                <Button fx:id="blockUserButton" text="Block User" />
                <Button fx:id="unblockUserButton" text="Unblock User" />
            </HBox>
        </VBox>

        <!-- Right Section: User Role Management -->
        <VBox layoutX="1030.0" layoutY="123.0" spacing="10" prefWidth="300.0">
            <Label text="Manage Roles" style="-fx-font-size: 18px;"/>
            <HBox spacing="10">
                <Label text="Select User:"/>
                <ComboBox fx:id="userComboBox"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Assign Roles:"/>
                <VBox>
                    <CheckBox fx:id="adminRoleCheckBox" text="Administrator"/>
                    <CheckBox fx:id="productManagerRoleCheckBox" text="Product Manager"/>
                </VBox>
            </HBox>
            <Button fx:id="setRolesButton" text="Set Roles"/>
        </VBox>

        <!-- Bottom Section: Logout and Change Password Buttons -->
        <HBox layoutX="24.0" layoutY="720.0" spacing="10" prefWidth="1283.0" alignment="CENTER_RIGHT">
            <Button fx:id="changePasswordButton" text="Change Password"/>
            <Button fx:id="logoutButton" text="Logout"/>
        </HBox>

    </children>
</AnchorPane>
